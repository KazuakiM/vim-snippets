 ON ${3:condition}
endsnippet
snippet left "LEFT JOIN"
 LEFT JOIN ${1:table} ${2:abbreviation}
 ON ${3:condition}
endsnippet
snippet where "WHERE"
 WHERE ${1:condition}
endsnippet
snippet and "AND"
 AND ${1:condition}
endsnippet
snippet or "OR"
 OR ${1:condition}
endsnippet
snippet group_by "GROUP BY"
