snippet setter "Setter"
public function set${1/\w+\s*/\u$0/}($$1) { $this->_$1 = $$1; }
endsnippet
snippet getter "Getter"
public function get${1/\w+\s*/\u$0/}() { return $this->_$1; }
endsnippet
snippet sgetter "Setter and Getter"
public function set${1/\w+\s*/\u$0/}($$1) { $this->_$1 = $$1; }
public function get${1/\w+\s*/\u$0/}() { return $this->_$1; }
endsnippet
snippet gsetter "Setter and Getter"
public function set${1/\w+\s*/\u$0/}($$1) { $this->_$1 = $$1; }
public function get${1/\w+\s*/\u$0/}() { return $this->_$1; }
endsnippet
